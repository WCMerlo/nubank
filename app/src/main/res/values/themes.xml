<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base da aplicação. -->
    <style name="Base.Theme.NubankClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize o tema claro aqui. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor da barra de status para API nível 21 (Lollipop) ou superior -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema personalizado que herda do tema base -->
    <style name="Theme.NubankClone" parent="Base.Theme.NubankClone" />
</resources>